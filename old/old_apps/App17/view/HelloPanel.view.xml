<mvc:View
	controllerName="sap.ui.demo.walkthrough.HelloPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	>
	
	<Panel	headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin"	width="auto">
		<content>
			<Button	text="i18n>showHelloButtonText"	
				press=".onShowHello"
			class="sapUiSmallMarginEnd myCustomButton"/>
			<Input	value="{/recipient/name}" width="60%" valueLiveUpdate="true"	/>
			<FormattedText	htmlText="Hello {/recipient/name}" class="sapUiSmallMargin	sapThemeHighlight-asColor	myCutomeText"	/>
		</content>
	</Panel>
	
</mvc:View>